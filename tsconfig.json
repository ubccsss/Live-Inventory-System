{
	"compilerOptions": {
        "target": "ES6",
		"outDir": "dist",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
		"typeRoots": [
			"./node_modules/@types"
		]
	},
	"include": [
		"src/**/*.ts",
		"test/**/*.ts"
	],
	"exclude": [
		"node_modules",
		".eslintrc.js"
	]
}
